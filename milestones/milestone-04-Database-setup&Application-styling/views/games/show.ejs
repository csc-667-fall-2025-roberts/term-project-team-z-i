<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= game.name %> - Uno Game</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header class="header">
    <div class="container">
      <div class="header-content">
        <div class="logo">üéÆ Uno Game</div>
        <div class="user-info">
          <a href="/lobby" class="btn btn-secondary">‚Üê Back to Lobby</a>
          <% if (user && !user.isGuest) { %>
            <span style="margin-left:0.75rem;">Welcome, <strong><%= user.username %></strong></span>
            <a href="/auth/logout" class="btn btn-danger" style="margin-left:0.5rem;">Logout</a>
          <% } else { %>
            <a href="/auth/login" class="btn btn-secondary" style="margin-left:0.5rem;">Login</a>
            <a href="/auth/signup" class="btn btn-primary" style="margin-left:0.5rem;">Sign up</a>
          <% } %>
          
          <% if (user && !user.isGuest && user.id === game.created_by) { %>
            <form action="/games/<%= game.id %>/delete" method="POST" style="display:inline;margin-left:0.5rem;">
              <button type="submit" class="btn btn-danger">Delete Room</button>
            </form>
          <% } %>
        </div>
      </div>
    </div>
  </header>

  <div class="container">
    <div class="game-board">
      <div class="game-board-header">
        <div>
          <h1 style="font-size: 1.5rem; margin-bottom: 0.5rem;"><%= game.name %></h1>
          <p style="color: #6b7280;">Status: <span class="game-status status-<%= game.state.replace('_', '-') %>">
            <%= game.state.replace('_', ' ') %>
          </span></p>
        </div>
        <div>
          <p style="color: #6b7280;">Current Player: <strong><%= game.current_player %></strong></p>
        </div>
      </div>

      <div class="game-players">
        <% game.players.forEach((player, index) => { %>
          <div class="player-card <%= player === game.current_player ? 'active' : '' %>">
            <div class="player-name"><%= player %></div>
            <div class="player-cards"><%= Math.floor(Math.random() * 7) + 1 %> cards</div>
          </div>
        <% }); %>
      </div>

      <div class="game-center">
        <div class="discard-pile">
          <div style="text-align: center;">
            <div style="font-size: 2rem; margin-bottom: 0.5rem;">üÉè</div>
            <div style="font-size: 0.75rem;">DISCARD</div>
          </div>
        </div>
        <div class="draw-pile">
          <div style="text-align: center;">
            <div style="font-size: 2rem; margin-bottom: 0.5rem;">üé¥</div>
            <div style="font-size: 0.75rem;">DRAW</div>
          </div>
        </div>
      </div>

      <div class="player-hand">
        <h3 class="hand-title">Your Hand</h3>
        <div class="hand-cards">
          <% if (hand && hand.length > 0) { %>
            <% hand.forEach(function(card){ %>
              <div class="uno-card card-<%= card.color %>">
                <div class="uno-value"><%= card.value %></div>
              </div>
            <% }); %>
          <% } else { %>
            <p style="color:#6b7280;">No cards in hand.</p>
          <% } %>
        </div>
      </div>
    </div>

    <div class="chat-area">
      <h3 class="card-header">Game Chat</h3>
      <div class="chat-messages" id="chatMessages">
        <% if (messages && messages.length > 0) { %>
          <% messages.forEach(function(msg) { %>
            <div class="chat-message">
              <strong><%= msg.username %></strong>
              <span style="color:#6b7280; font-size:0.85rem; margin-left:0.5rem;"><%= msg.created_at %></span>
              <div><%= msg.message %></div>
            </div>
          <% }); %>
        <% } else { %>
          <div class="chat-message">
            <strong>System:</strong> Game started! Good luck!
          </div>
        <% } %>
      </div>
      <form action="/games/<%= game.id %>/messages" method="POST" class="chat-input-group">
        <input 
          name="message"
          type="text" 
          class="chat-input" 
          placeholder="Type a message..."
          id="chatInput"
          required
        >
        <button type="submit" class="btn btn-primary">Send</button>
      </form>
    </div>
  </div>
</body>
</html>

