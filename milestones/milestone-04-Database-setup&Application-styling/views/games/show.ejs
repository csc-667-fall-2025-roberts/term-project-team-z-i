<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= game.name %> - Uno Game</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header class="header">
    <div class="container">
      <div class="header-content">
        <div class="logo">ğŸ® Uno Game</div>
        <div class="user-info">
          <a href="/lobby" class="btn btn-secondary">â† Back to Lobby</a>
        </div>
      </div>
    </div>
  </header>

  <div class="container">
    <div class="game-board">
      <div class="game-board-header">
        <div>
          <h1 style="font-size: 1.5rem; margin-bottom: 0.5rem;"><%= game.name %></h1>
          <p style="color: #6b7280;">Status: <span class="game-status status-<%= game.state.replace('_', '-') %>">
            <%= game.state.replace('_', ' ') %>
          </span></p>
        </div>
        <div>
          <p style="color: #6b7280;">Current Player: <strong><%= game.current_player %></strong></p>
        </div>
      </div>

      <div class="game-players">
        <% game.players.forEach((player, index) => { %>
          <div class="player-card <%= player === game.current_player ? 'active' : '' %>">
            <div class="player-name"><%= player %></div>
            <div class="player-cards"><%= Math.floor(Math.random() * 7) + 1 %> cards</div>
          </div>
        <% }); %>
      </div>

      <div class="game-center">
        <div class="discard-pile">
          <div style="text-align: center;">
            <div style="font-size: 2rem; margin-bottom: 0.5rem;">ğŸƒ</div>
            <div style="font-size: 0.75rem;">DISCARD</div>
          </div>
        </div>
        <div class="draw-pile">
          <div style="text-align: center;">
            <div style="font-size: 2rem; margin-bottom: 0.5rem;">ğŸ´</div>
            <div style="font-size: 0.75rem;">DRAW</div>
          </div>
        </div>
      </div>

      <div class="player-hand">
        <h3 class="hand-title">Your Hand</h3>
        <div class="hand-cards">
          <!-- Card placeholders - this will be populated with actual cards later -->
          <% for (let i = 0; i < 7; i++) { %>
            <div class="card-placeholder">
              <div style="text-align: center;">
                <div style="font-size: 1.5rem;">ğŸƒ</div>
                <div style="font-size: 0.625rem; margin-top: 0.25rem;">Card</div>
              </div>
            </div>
          <% } %>
        </div>
      </div>
    </div>

    <div class="chat-area">
      <h3 class="card-header">Game Chat</h3>
      <div class="chat-messages" id="chatMessages">
        <div class="chat-message">
          <strong>System:</strong> Game started! Good luck!
        </div>
      </div>
      <div class="chat-input-group">
        <input 
          type="text" 
          class="chat-input" 
          placeholder="Type a message..."
          id="chatInput"
        >
        <button type="button" class="btn btn-primary">Send</button>
      </div>
    </div>
  </div>
</body>
</html>

