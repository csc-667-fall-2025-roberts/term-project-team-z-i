<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Lobby - Uno Game</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header class="header">
    <div class="container">
      <div class="header-content">
        <div class="logo">ðŸŽ® Uno Game</div>
        <div class="user-info">
          <% if (user && !user.isGuest) { %>
            <span>Welcome, <strong><%= user.username %></strong></span>
            <a href="/auth/logout" class="btn btn-danger">Logout</a>
          <% } else { %>
            <a href="/auth/login" class="btn btn-secondary">Login</a>
            <a href="/auth/signup" class="btn btn-primary">Sign up</a>
          <% } %>
        </div>
      </div>
    </div>
  </header>

  <div class="container">
    <div class="card">
      <h2 class="card-header">Create New Game</h2>
      <form action="/games/create" method="POST">
        <div class="form-group">
          <label for="gameName" class="form-label">Game Name</label>
          <input 
            type="text" 
            id="gameName" 
            name="gameName" 
            class="form-input" 
            placeholder="Enter game name"
            required
          >
        </div>
        
        <div class="form-group">
          <label for="maxPlayers" class="form-label">Max Players</label>
          <input 
            type="number" 
            id="maxPlayers" 
            name="maxPlayers" 
            class="form-input" 
            min="2" 
            max="10" 
            value="4"
            required
          >
        </div>
        
        <button type="submit" class="btn btn-primary">Create Game</button>
      </form>
    </div>

    <div class="card">
      <h2 class="card-header">Available Games</h2>
      <div class="game-list">
        <% if (games && games.length > 0) { %>
          <% games.forEach(game => { %>
            <div class="game-item">
              <div class="game-info">
                <h3><%= game.name %></h3>
                <div class="game-meta">
                  Created by: <%= game.created_by %> | 
                  Players: <%= game.current_players %>/<%= game.max_players %>
                  <span class="game-status status-<%= game.state.replace('_', '-') %>">
                    <%= game.state.replace('_', ' ') %>
                  </span>
                </div>
              </div>
              <a href="/games/<%= game.id %>" class="btn btn-primary">Join Game</a>
            </div>
          <% }); %>
        <% } else { %>
          <p style="text-align: center; color: #6b7280; padding: 2rem;">
            No games available. Create one to get started!
          </p>
        <% } %>
      </div>
    </div>

    <div class="chat-area">
      <h3 class="card-header">Lobby Chat</h3>
      <div class="chat-messages" id="chatMessages">
        <% if (messages && messages.length > 0) { %>
          <% messages.forEach(function(msg) { %>
            <div class="chat-message">
              <strong><%= msg.username %></strong>
              <span style="color:#6b7280; font-size:0.85rem; margin-left:0.5rem;"><%= msg.created_at %></span>
              <div><%= msg.message %></div>
            </div>
          <% }); %>
        <% } else { %>
          <div class="chat-message">
            <strong>System:</strong> Welcome to the lobby! Start chatting with other players.
          </div>
        <% } %>
      </div>
      <form action="/messages" method="POST" class="chat-input-group">
        <input 
          name="message"
          type="text" 
          class="chat-input" 
          placeholder="Type a message..."
          id="chatInput"
          required
        >
        <button type="submit" class="btn btn-primary">Send</button>
      </form>
    </div>
  </div>
</body>
</html>

